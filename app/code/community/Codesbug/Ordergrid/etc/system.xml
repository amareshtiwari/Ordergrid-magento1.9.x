<?xml version="1.0"?>
<config>
    <sections>
        <ordergridsection translate="label" module="ordergrid">
            <class>separator-top</class>
            <label>Order Grid</label><!-- creating new section orderegrid-->
            <tab>codesbug</tab>
            <sort_order>130</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <ordergrid translate="label">
                    <label>Grid Configuration</label><!-- creating group Grid Configuration-->
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>                         <!-- creating multiselect option-->
                        <view_style translate="label">
                            <label>Show Extra Column(s)</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>ordergrid/system_config_source_extra</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                        </view_style>                    
                        <grid_style translate="label">
                            <label>Hide Default Column(s)</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>ordergrid/system_config_source_default</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                        </grid_style>                        
                    </fields> 
                </ordergrid>
            </groups>
        </ordergridsection>
    </sections>
</config>


